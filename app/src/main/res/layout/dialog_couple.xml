<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/partner_1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/profile_picture_1_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/horizontal_spacing"
            android:layout_marginTop="@dimen/vertical_spacing"
            android:layout_marginBottom="@dimen/vertical_spacing"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/default_profile" />

        <TextView
            android:id="@+id/grade_1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_spacing"
            android:layout_marginEnd="8dp"
            android:text="@string/grade_number"
            android:textColor="@color/darkerGray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Grade 11" />

        <TextView
            android:id="@+id/name_1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/edge_margin"
            android:layout_marginTop="@dimen/vertical_spacing"
            android:text="@string/full_name"
            android:textColor="@color/darkerGray"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/profile_picture_1_image"
            app:layout_constraintTop_toTopOf="@+id/profile_picture_1_image"
            tools:text="John Smith" />

        <TextView
            android:id="@+id/bio_1_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profile_picture_1_image"
            app:layout_constraintTop_toBottomOf="@+id/name_1_text"
            app:layout_constraintVertical_bias="0.3"
            tools:text="Hey guys, it's me, John!" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGray" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/partner_2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/profile_picture_2_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/horizontal_spacing"
            android:layout_marginTop="@dimen/vertical_spacing"
            android:layout_marginBottom="@dimen/vertical_spacing"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/default_profile" />

        <TextView
            android:id="@+id/grade_2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_spacing"
            android:layout_marginEnd="8dp"
            android:text="@string/grade_number"
            android:textColor="@color/darkerGray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Grade 12" />

        <TextView
            android:id="@+id/name_2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/edge_margin"
            android:layout_marginTop="@dimen/vertical_spacing"
            android:text="@string/full_name"
            android:textColor="@color/darkerGray"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/profile_picture_2_image"
            app:layout_constraintTop_toTopOf="@+id/profile_picture_2_image"
            tools:text="Mary Doe" />

        <TextView
            android:id="@+id/bio_2_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profile_picture_2_image"
            app:layout_constraintTop_toBottomOf="@+id/name_2_text"
            app:layout_constraintVertical_bias="0.3"
            tools:text="Hey guys, it's me, Mary! I'm actually going to prom with John (lol)." />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>